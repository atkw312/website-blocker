{
  "manifest_version": 3,
  "name": "Focus Blocker",
  "version": "1.4.0",
  "description": "Precision YouTube channel blocker with focus session management.",
  "permissions": [
    "storage",
    "nativeMessaging",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": ["storage.js", "rules.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Blocker"
  },
  "icons": {}
}
